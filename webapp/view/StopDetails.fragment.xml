<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout">
    <Dialog
        class="sapUiPopupWithPadding stopDetailsDialog bottomSheetDialog"
        contentWidth="100%"
        showHeader="false">
        <content>
            <VBox class="sapUiSmallMargin">
                <!-- Drag Handle / Visual Indicator -->
                <HBox justifyContent="Center" className="sapUiTinyMarginBottom">
                    <core:Icon src="sap-icon://less" size="2rem" color="#d9d9d9" class="dragHandleIcon" />
                </HBox>

                <!-- Header -->
                <HBox justifyContent="SpaceBetween" alignItems="Start" class="sapUiSmallMarginBottom">
                    <VBox>
                        <Label text="PICKUP POINT INFO" class="infoLabel" />
                        <Title text="{/selectedStop/longName}" level="H2" class="stopDetailsTitle" />
                    </VBox>
                    <Button icon="sap-icon://decline" type="Transparent" press="onStopDetailsClose" class="closeBtn" />
                </HBox>

                <!-- Info Cards -->
                <HBox justifyContent="SpaceBetween" class="sapUiMediumMarginBottom">
                    <!-- ETA Card -->
                    <VBox class="detailsCard">
                        <HBox class="iconBox blueIconBox sapUiSmallMarginBottom" alignItems="Center" justifyContent="Center">
                            <core:Icon src="sap-icon://public-transport" class="boxIcon" />
                        </HBox>
                        <Title text="{/selectedStop/eta}" level="H3" class="cardValue" />
                        <Text text="Bus ETA" class="cardLabel" />
                    </VBox>

                    <!-- Walking Time Card -->
                    <VBox class="detailsCard">
                        <HBox class="iconBox greenIconBox sapUiSmallMarginBottom" alignItems="Center" justifyContent="Center">
                            <core:Icon src="sap-icon://navigation-arrow" class="boxIcon" />
                        </HBox>
                        <Title text="{/selectedStop/walkingTime}" level="H3" class="cardValue" />
                        <Text text="Walking Time" class="cardLabel" />
                    </VBox>
                </HBox>

                <!-- Action Button -->
                <Button text="Set as My Stop" type="Emphasized" width="100%" class="setStopBtn" icon="sap-icon://paper-plane" />

            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>
